<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:background="#757575"
        android:text="Monthy Spending Total:"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/Total_Money"
        android:layout_width="102dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:background="#757575"
        android:text="1,045.67"
        android:textAlignment="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textColor="@android:color/white" />

    <TextView
        android:id="@+id/Greetings1"
        android:layout_width="95dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="TextView"
        android:textAppearance="@android:style/TextAppearance.Medium" />

    <TextView
        android:id="@+id/TH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/T1"
        android:layout_centerHorizontal="true"
        android:text="Transaction History:"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:textSize="32dp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/T1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/T2"
        android:layout_alignParentStart="true"
        android:background="#FF8C00"
        android:text="Taco Bell"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/T2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/T3"
        android:layout_alignParentStart="true"
        android:background="#FF0000"
        android:text="Safeco Insurance"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/T3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider4"
        android:layout_alignParentStart="true"
        android:background="#008000"
        android:text="Summit East Plaza Apartments"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/S1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/T1"
        android:text="9.80"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/S3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/T2"
        android:text="899"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <TextView
        android:id="@+id/S2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/T1"
        android:text="47"
        android:textAppearance="@android:style/TextAppearance.Large" />

    <View
        android:id="@+id/divider4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="221dp"
        android:background="#212121" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/add_tran"
        android:layout_width="49dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="18dp"
        android:clickable="true"
        app:backgroundTint="@color/colorPrimaryDark"
        app:rippleColor="?android:attr/colorControlHighlight"
        app:srcCompat="@android:drawable/ic_menu_add" />

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/chart"
        android:layout_width="169dp"
        android:layout_height="184dp"
        android:layout_below="@+id/T3"
        android:layout_centerHorizontal="true" />




</RelativeLayout>